<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= title %></title>

  <!-- Custom fonts for this template-->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template-->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">
  <link href="/css/manager.css" rel="stylesheet">
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/sidebars/sidebar-index') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/top-bar') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid border-content">
          <div class="row block-info">
            <nav aria-label="breadcrumb" class="col-md-12">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Equipo</li>
                <li class="breadcrumb-item" aria-current="page"><%= team.name %></li>
              </ol>
            </nav>
            
            <div class="col-md-12">
              <div class="row accordion d-flex">
                <div class="col-xl-3 col-md-6 mb-4">
                  <div class="card shadow ">
                    <div class="p-4 card-box text-center" id="heading">
                      <div class="member-card">
                        <img width="60" height="70" alt="profile-image" src=<%= team.img %> >  
                        <div class="mt-4" style="font-size: small;">
                          <strong><p>Próximo partido</p></strong>
                          <ul class="list-inline">
                            <a href="/team/<%= nextMatch['home'][0] %>"> <img width="30" height="40" alt="profile-image" src=<%= nextMatch['home'][1] %> ></a>
                            <li class="list-inline-item">
                              <p class="p-1">VS</p>
                            </li>
                            <li class="list-inline-item">
                              <a href="/team/<%= nextMatch['away'][0] %>"> <img width="30" height="40" alt="profile-image" src=<%= nextMatch['away'][1] %> ></a>
                            </li>
                          </ul>
                          <ul class="list-inline">
                            <li class="list-inline-item">
                              <i class="far fa-calendar-alt" data-fa-transform="down-2 right-5 shrink-8"></i>
                            </li>
                            <li class="list-inline-item">
                              <p><%= nextMatch['date'] %></p>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-9 text-center">
                  <div class="form-row justify-content-center p-4" style="padding-top:0 !important;">
                    <div class="col-xl-3 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Victorias</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= team.won %></div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fas fa-thumbs-up fa-2x "></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Empates</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= team.tied %></div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fas fa-balance-scale fa-2x "></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Derrotas</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= team.lost %></div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fas fa-thumbs-down fa-2x "></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Posición</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= team.position %>º</div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fas fa-sort fa-2x "></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-row justify-content-center p-4" style="padding-top:0 !important;">
                    <div class="col-xl-3 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Puntos</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= totalPoints %></div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fa fa-braille  fa-2x text-300"></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="col-xl-4 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Valor de Mercado</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= value %> €</div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fas fa-euro-sign  fa-2x text-300"></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4 text-center">
                      <div class="card shadow py-2">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Mejor Jugador</div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= bestPlayer %></div>
                                  </div>
                                  <div class="col-auto">
                                    <i class="fa fa-star fa-2x text-300"></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-12 text-center">
              <table id="tablePlayers" class="table m-auto text-center display nowrap" style="color:black; width:100%;" data-order='[[ 3, "desc" ]]'>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Equipo</th>
                        <th>Posicion</th>
                        <th>Puntos</th>
                        <th>Estado</th>
                        <th>Últimos puntos</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

  <!-- dataTables -->
  <script src="/vendor/dataTables/js/jquery.dataTables.min.js"></script>
  <script src="/vendor/dataTables/js/dataTables.bootstrap4.min.js"></script>
  <script src="/vendor/dataTables/js/dataTables.select.min.js"></script>

  <script src="/js/teams/team.js"></script>
  <script>
      const team = <%- JSON.stringify(team) %>;
      const players = <%- JSON.stringify(players) %>;
      const bestPlayer = <%- JSON.stringify(bestPlayer) %>
  </script>
</body>

</html>